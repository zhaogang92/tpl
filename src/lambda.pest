KEYWORDS = {
    "lambda"
}

var = @{
    !KEYWORDS
    ~ ASCII_ALPHA+
}

wrap_term = _{ term | "(" ~ term ~ ")" }

abst = { "lambda" ~ var ~ "." ~ wrap_term }

app_template = _{ var | "(" ~ term ~ ")" }

app = { app_template ~ wrap_term }

term = _{ abst | app | var}

stmt = { term ~ ";" }

program = _{ SOI ~ stmt* ~ EOI }


WHITESPACE = _{ " " | "\t" | NEWLINE }
COMMENT = _{ "/*" ~ (!"*/" ~ ANY)* ~ "*/" }