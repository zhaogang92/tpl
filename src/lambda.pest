var = {
    ASCII_ALPHA+
}

abst = { "lambda" ~ var ~ "." ~ term }

app = { "(" ~ term ~ ")" ~ "("? ~ term ~ ")"? }

term = _{ abst | app | var}

stmt = { term ~ ";" }

program = _{ SOI ~ NEWLINE* ~ (stmt ~ NEWLINE+)* ~ stmt? ~ EOI }


WHITESPACE = _{ " " }
COMMENT = _{ "/*" ~ (!"*/" ~ ANY)* ~ "*/" }